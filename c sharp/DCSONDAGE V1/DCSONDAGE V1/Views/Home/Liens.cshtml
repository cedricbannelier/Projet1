    <header>
        <a href="~/home/index"><img src="~/Content/dcS_White_Transparent.png" alt="Logo DCSondage" id="banniere_image"> </a>
    </header>

    <br />
    <h1>Ci-dessous les 3 liens à GARDER pour votre sondage</h1>
@{

    string host = "172.19.240.5:12231"; }


    <div class="row">

        <div class="form-group col-lg-10 center">
            <div class="input-group">

                <div class="input-group-prepend">
                    
                        <a href="@Model.adresseLien1" target="_blank"> <span class="input-group-text" id="">Vote</span></a>
                    </div>
                    <input type="text" class="form-control" value=@host@Model.adresseLien1>
                </div>
                <br />
                <div class="input-group">
                    <div class="input-group-prepend">
                        <a href="@Model.adresseLien2" target="_blank">  <span class="input-group-text" id="">Resultat</span></a>
