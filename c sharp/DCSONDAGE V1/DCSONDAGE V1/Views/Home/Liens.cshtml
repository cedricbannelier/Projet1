                <br />
                <div class="input-group">
                    <div class="input-group-prepend">
                        <a href="@Model.adresseLien3" target="_blank"><span class="input-group-text" id="">Suppression</span></a>
                    </div>
                    <input type="text" class="form-control" value=@host@Model.adresseLien3>
